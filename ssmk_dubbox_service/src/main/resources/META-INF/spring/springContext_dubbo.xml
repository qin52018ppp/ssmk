<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
<!-- 提供方应用信息，用于计算依赖关系 -->
 	<dubbo:application name="ssmk_dubbox_service" owner="qin" organization="ssmk" />

	<!--使用zookeeper广播注册中心暴露服务地址-->
<!--	<dubbo:registry address="zookeeper://192.168.175.128:2181" /> -->
<!--	集群-->
	<dubbo:registry protocol="zookeeper" address="zookeeper://127.0.0.1:2181?backup=127.0.0.1:2182,127.0.0.1:2183" />
	
<!--	用dubbo协议在20880端口暴露服务-->
	<dubbo:protocol name="dubbo" serialization="dubbo"/>

<!--	声明需要暴露的服务接口-->
	<dubbo:service interface="com.baobao.ssmk.service.ILoginService" ref="loginService" protocol="dubbo" timeout="300000" />

<!--	和本地bean一样实现服务-->
	<bean id="loginService" class="com.baobao.ssmk.service.LoginServiceImpl"  />

</beans>